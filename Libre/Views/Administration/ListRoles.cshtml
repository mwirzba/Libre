@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Title = "Wszystkie role";
}

<h1>Wszystkie role</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="administration">Dodaj nową rolę</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edytuj</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Nie stworzono jeszcze żadnych ról
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Użyj guzika poniżej by dodać nową rolę
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Dodaj nową rolę
            </a>
        </div>
    </div>
}