@model Libre.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <div class="border backgroundWhite">
        <h2 class="text-info">Edycja</h2>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Title" class="control-label"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Publisher" class="control-label"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="Publisher" class="form-control" />
            </div>
            <span asp-validation-for="Publisher" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Language" class="control-label"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="Language" class="form-control" />
            </div>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Pages" class="control-label"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="Pages" class="form-control" />
            </div>
            <span asp-validation-for="Pages" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="CoverType" class="control-label"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="CoverType" class="form-control" />
            </div>
            <span asp-validation-for="CoverType" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="RealeaseDate" class="control-label"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="RealeaseDate" class="form-control" />
            </div>
            <span asp-validation-for="RealeaseDate" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Info" class="control-label"></label>
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Info, new { @class = "form-control", @rows = 4 })
            </div>
            <span asp-validation-for="Info" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="GenreId" class="control-label"></label>
            </div>
            <div class="col-md-10">
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-5 offset-md-2">
                <partial name="_EditAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
