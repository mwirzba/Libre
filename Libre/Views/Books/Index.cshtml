@model IEnumerable<Libre.Models.Book>

@{
    ViewData["Title"] = "Index";
}


<div class="backgroundWhite border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Książki</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div class="overflow-auto">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                @{var item2 = Model.Last();}
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(model => item2.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.Publisher)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.RealeaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.Language)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.Pages)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.CoverType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.Genre.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealeaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pages)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoverType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td style="width:150px">
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@item.Id">
                            <i class="fas fa-list-alt"></i>
                        </a>

                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>Brak Książek</p>
        }
    </div>
</div>
